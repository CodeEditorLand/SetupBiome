{
	"name": "setup-biome",
	"description": "Setup the Biome CLI in GitHub Actions",
	"keywords": [
		"biome",
		"biomejs",
		"cli",
		"github-action"
	],
	"license": "MIT",
	"author": {
		"name": "Nicolas Hedger",
		"email": "nicolas@hedger.ch"
	},
	"type": "module",
	"module": "src/index.ts",
	"scripts": {
		"build": "bun build . --outfile dist/index.mjs --target node --minify",
		"check": "biome check . --apply",
		"ci": "biome ci .",
		"tag": "bun run scripts/tag-github-action.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@actions/core": "1.11.1",
		"@actions/tool-cache": "2.0.1",
		"@octokit/auth-action": "5.1.1",
		"@octokit/request-error": "6.1.5",
		"@octokit/rest": "21.0.2",
		"semver": "7.6.3",
		"ts-dedent": "2.2.0",
		"yaml": "2.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@octokit/types": "13.6.1",
		"@types/bun": "1.1.11",
		"@types/semver": "7.5.8",
		"lefthook": "1.7.18",
		"typescript": "5.6.3"
	},
	"packageManager": "bun@1.1.4",
	"trustedDependencies": [
		"@biomejs/biome",
		"lefthook"
	]
}
